@model BingoWebApp.Models.Login

@{
    ViewData["Title"] = "UserLogin";
}

@{
    Layout = null;
}

<style>
   
    .text-danger{
        display:block;
        text-align:left;
        color:red;
    }
</style>


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login | Bingo App</title>
    <link rel="stylesheet" href="~/css/Login.css">
</head>
<body>
    <div class="container">
        <form class="login-form" asp-action="Login">
            <h1>Bingo</h1>
            <div asp-validation-summary="ModelOnly">

            </div>
            <div class="form-group">
                <input asp-for="Username" type="text" id="username" name="username" placeholder="Username" >
                <span asp-validation-for="Username" class="text-danger"></span>
            </div class="form-group">
            <div class=form-group>
                <input asp-for="Password" type="password" id="password" name="password" placeholder="Password">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit">Login</button>
            </div>
            <p>Don't have an account? <a href="@Url.Action("Create")">Sign up here</a></p>
        </form>
        
    </div>
</body>
</html>
@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
